// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  cpf        String   @id
  full_name  String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  Account    Account? // customer can have 0 to one Account
}

model Account {
  id         String   @id @default(uuid())
  balance    Float
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  // Relation Fields
  user_id String @unique
  user    User   @relation(fields: [user_id], references: [cpf])

  recipient Transaction[] @relation("recipient")
  sender    Transaction[] @relation("sender")
}

model Transaction {
  id          String          @id @default(uuid())
  description String?
  amount      Float
  type        TransactionType
  created_at  DateTime        @default(now())

  // Relation Fields
  recipient_id String
  recipient    Account  @relation(name: "recipient", fields: [recipient_id], references: [id])
  sender_id    String?
  sender       Account? @relation(name: "sender", fields: [sender_id], references: [id])
}

enum TransactionType {
  DEPOSIT
  TRANSFER
}
